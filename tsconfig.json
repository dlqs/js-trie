{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es6", "dom"],
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "bin",
        "sourceMap": true
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "src/*.test.ts",
    ]
}